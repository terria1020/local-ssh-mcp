{
  "allowedCommands": [
    "kubectl",
    "docker",
    "htop",
    "ls",
    "df",
    "free",
    "uptime",
    "tail",
    "grep",
    "cat /var/log",
    "ps",
    "top",
    "netstat",
    "ss",
    "journalctl"
  ],
  "blockedPatterns": [
    "rm",
    "rm -rf",
    "rm -fr",
    "rm -r /",
    "shutdown",
    "reboot",
    "halt",
    "poweroff",
    "passwd",
    "scp",
    "chmod 777",
    "cat ~/.ssh",
    "cat /etc/shadow",
    "cat /etc/passwd",
    "mkfs",
    "dd if=",
    "> /dev/",
    "curl | bash",
    "wget | bash",
    "curl | sh",
    "wget | sh",
    "nc -l",
    "ncat -l",
    "/dev/tcp"
  ]
}
